<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/splashni"
        android:layout_width="260dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/histow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gradg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tentang Aplikasi"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="Aplikasi ini dibuat dengan tujuan untuk Tugas Pemrograman Bergerak Pa Chandra, dan merupakan projek dari Nasywah Aqila Vadrian XI RPL B, Kuis Tokoh Pahlawan"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/toback"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Kembali"
            android:background="@drawable/grade"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>